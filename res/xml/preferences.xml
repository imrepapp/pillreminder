<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/settings_title">
	<CheckBoxPreference
		android:key="alarm_enable"
		android:title="@string/settings_alarm_enable_title"
		android:summary="@string/settings_alarm_enable_summary"
		android:defaultValue="true"
		/>
	<EditTextPreference
		android:key="remain_amount"
		android:title="@string/settings_pill_remain_amount_title"
		android:summary="@string/settings_pill_remain_amount_summary"
		android:defaultValue="0"
		android:numeric="integer"
		android:inputType="number"
		android:maxLength="9"
		/>
	<EditTextPreference
		android:key="use_amount"
		android:title="@string/settings_pill_use_amount_title"
		android:summary="@string/settings_pill_use_amount_summary"
		android:defaultValue="0"
		android:dependency="remain_amount"
		android:numeric="integer"
		android:inputType="number"
		android:maxLength="9"
		/>
	<hu.creapp.android.preference.TimePickerPreference
		android:key="alarm_time"
		android:title="@string/settings_alarm_time_title"
		android:summary="@string/settings_alarm_time_summary"
		android:dependency="alarm_enable"
		android:defaultValue="08:00"
		/>
	<hu.creapp.android.preference.MultiSelectListPreference
		android:key="alarm_days"
		android:title="@string/settings_alarm_days_title"
		android:summary="@string/settings_alarm_days_summary"
		android:entries="@array/alarm_days"
		android:entryValues="@array/alarm_days_values"
		android:dependency="alarm_enable"
		android:defaultValue=""
		/>
	<RingtonePreference
		android:key="alarm_ringtone"
		android:title="@string/settings_alarm_ringtone_title"
		android:showDefault="true"
		android:ringtoneType="notification|alarm"
		android:defaultValue="content://settings/system/notification_sound"
		/>
	<EditTextPreference
		android:key="runout_days"
		android:title="@string/settings_pill_runout_amount"
		android:summary="@string/settings_pill_runout_amount_summary"
		android:defaultValue="6"
		android:dependency="remain_amount"
		android:numeric="integer"
		android:inputType="number"
		android:maxLength="2"
		/>
</PreferenceScreen>
